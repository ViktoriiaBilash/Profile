<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Profile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/navy_300</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>

        <!--Surface colors -->
        <item name="colorSurface">@color/navy_500</item>

        <!--The background color appears behind scrollable content-->
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">?attr/colorOnBackground</item>

        <!--Text appearance -->
        <item name="errorTextColor">@color/red_500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/navy_700</item>
        <item name="android:navigationBarColor">@color/navy_700</item>
    </style>

    <style name="ViewBackgroundLight">
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:buttonTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox
        </item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCollapsedPaddingTop">10dp</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox.ColorOnPrimary">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="hintTextColor">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginStart">@dimen/margin_all_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_all_large</item>
    </style>

    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_activity</item>
    </style>

    <style name="TextViewColorGray">
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TextViewColorBackground">
        <item name="android:textColor">?attr/colorSurface</item>
    </style>

    <style name="Button.Full" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="colorPrimary">?attr/colorOnBackground</item>
        <item name="colorOnPrimary">?attr/colorSurface</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTintMode">add</item>
        <item name="iconTint">@android:color/transparent</item>
    </style>

    <style name="Button.Full.ColorBackground">
        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorOnPrimary">?attr/colorOnBackground</item>
    </style>

    <style name="ButtonColorSecondary">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="Button.Full.StrokeColor">
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">?attr/colorSurface</item>
        <item name="customStrokeWidth">2dp</item>
    </style>

    <style name="ButtonStrokeColorSecondary">
        <item name="strokeColor">?attr/colorSecondary</item>
        <item name="customStrokeWidth">2dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>