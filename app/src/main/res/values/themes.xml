<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceCycle">
    <!-- Base application theme. -->
    <style name="Theme.Profile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/gray_light</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations</item>
    </style>

    <style name="ViewBackgroundDark">
        <item name="android:background">@color/navy</item>
    </style>

    <style name="ViewBackgroundLight">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.FilledBox" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox
        </item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/navy</item>
        <item name="endIconTint">@color/mtrl_filled_icon_tint</item>
        <item name="startIconTint">@color/mtrl_filled_icon_tint</item>
        <item name="boxCollapsedPaddingTop">10dp</item>
        <item name="boxStrokeColor">@color/gray_light</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox
        </item>
    </style>

    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityOpenExitAnimation">@anim/exit_activity</item>
        <item name="android:activityCloseEnterAnimation">@anim/enter_activity</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_activity</item>
    </style>

    <style name="TextView">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="TextView.ColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextView.ColorGray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextView.ColorNavy">
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="Button">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Button.ButtonFullWhite" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/gray_dark</item>

    </style>

    <style name="Button.ButtonFullOrange">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

    <style name="Button.ButtonOrangeStroke" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/navy</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/orange</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Button.ButtonNavyStroke" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="colorOnPrimary">@color/navy</item>
        <item name="colorPrimary">@color/white</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@color/navy</item>
        <item name="strokeWidth">2dp</item>
    </style>

</resources>